---
import type { TournamentFormatMetadata } from "@/lib/tournament/types";

const { metadata }: { metadata: TournamentFormatMetadata } = Astro.props;
---

<article
    class="tournament-card relative h-full px-5 py-6 transition-transform duration-200 hover:-translate-y-[2px]"
    aria-labelledby={`${metadata.type}-title`}
>
    <div class="flex items-start justify-between gap-3">
        <div class="flex items-center gap-3">
            <div class="flex h-11 w-11 items-center justify-center rounded-xl bg-brand-50 text-2xl text-brand-700">
                <span aria-hidden="true">{metadata.icon}</span>
            </div>
            <div>
                <p class="text-sm font-medium text-brand-700">Format</p>
                <h3
                    id={`${metadata.type}-title`}
                    class="font-display text-xl font-semibold leading-tight text-neutral-900"
                >
                    {metadata.name}
                </h3>
            </div>
        </div>
        <span class="rounded-full bg-accent-50 px-3 py-1 text-xs font-semibold uppercase tracking-wide text-accent-800">
            {metadata.type.replace(/-/g, " ")}
        </span>
    </div>

    <p class="mt-4 text-base text-neutral-700">
        {metadata.description}
    </p>

    <div class="mt-5 space-y-2">
        <p class="text-sm font-semibold text-neutral-800">When to use this</p>
        <ul class="flex flex-wrap gap-2" aria-label="Use cases">
            {metadata.useCases.map((useCase) => (
                <li class="pill bg-white text-neutral-800 border-neutral-200">
                    {useCase}
                </li>
            ))}
        </ul>
    </div>
</article>
